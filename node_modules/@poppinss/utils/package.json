{
  "name": "@poppinss/utils",
  "version": "6.8.3",
  "description": "Handy utilities for repetitive work",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/tests",
    "!build/test_helpers",
    "!build/bin",
    "lodash"
  ],
  "exports": {
    ".": "./build/index.js",
    "./lodash": {
      "types": "./lodash/lodash.types.d.ts",
      "node": "./build/lodash/main.cjs",
      "default": "./build/lodash/main.cjs"
    },
    "./assert": "./build/src/assert.js",
    "./string": "./build/src/string/main.js",
    "./string_builder": "./build/src/string_builder.js",
    "./json": "./build/src/json/main.js",
    "./types": "./build/src/types.js",
    "./exceptions": "./build/src/exceptions/main.js",
    "./exception": "./build/src/exception.js",
    "./slash": "./build/src/slash.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run build:lodash && c8 npm run quick:test",
    "build:lodash": "lodash include=\"pick,omit,has,get,set,unset,mergeWith,merge,size,clone,cloneDeep,toPath\" --production && move-file ./lodash.custom.min.js build/lodash/main.cjs",
    "lint": "eslint",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile && npm run build:lodash",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "quick:test": "node --import=ts-node-maintained/register/esm bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^2.0.0-beta.6",
    "@adonisjs/logger": "^6.0.3",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^3.0.0",
    "@japa/expect-type": "^2.0.2",
    "@japa/runner": "^3.1.4",
    "@release-it/conventional-changelog": "^8.0.2",
    "@swc/core": "^1.7.26",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.5",
    "c8": "^10.1.2",
    "eslint": "^9.10.0",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "lodash-cli": "^4.17.5",
    "move-file-cli": "^3.0.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "ts-node-maintained": "^10.9.4",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@lukeed/ms": "^2.0.2",
    "@types/bytes": "^3.1.4",
    "@types/pluralize": "^0.0.33",
    "bytes": "^3.1.2",
    "case-anything": "^3.1.0",
    "flattie": "^1.1.1",
    "pluralize": "^8.0.0",
    "safe-stable-stringify": "^2.5.0",
    "secure-json-parse": "^2.7.0",
    "slash": "^5.1.0",
    "slugify": "^1.6.6",
    "truncatise": "^0.0.8"
  },
  "homepage": "https://github.com/poppinss/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/utils.git"
  },
  "bugs": {
    "url": "https://github.com/poppinss/utils/issues"
  },
  "keywords": [
    "toolkit",
    "utilities"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "publishConfig": {
    "provenance": true
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/assert.ts",
      "./src/string/main.ts",
      "./src/string_builder.ts",
      "./src/json/main.ts",
      "./src/types.ts",
      "./src/slash.ts",
      "./src/exception.ts",
      "./src/exceptions/main.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "**/build/lodash/**",
      "tests/**",
      "test_helpers/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
